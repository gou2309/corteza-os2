# 🚀 Claves de autenticación para Shopify
CLIENT_ID=tu_client_id_aquí
CLIENT_SECRET=tu_client_secret_aquí

# 🔁 Redirección OAuth configurada en Shopify Partners
REDIRECT_URI=https://tu-url-deproduccion.com/auth/callback

# 🌍 URL pública de tu servidor (Render u otro)
HOST=https://tu-url-deproduccion.com

# 🔒 Alcances autorizados por la app
SCOPES=read_products,read_orders,read_customers

# 🌐 Entorno de ejecución (development | production)
NODE_ENV=development

# 🧪 Token temporal (solo para pruebas locales, opcional)
ACCESS_TOKEN=token_de_prueba_si_lo_tienes
